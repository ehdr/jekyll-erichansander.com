---
permalink: feed/index.xml
---
<?xml
  version="1.0"
  encoding="UTF-8"?>
<feed
  xmlns="http://www.w3.org/2005/Atom"
  xml:lang="en">

  <title type="text">{{ site.title | xml_escape }}</title>
  {% if site.subtitle %}<subtitle type="text">{{ site.subtitle | xml_escape }}</subtitle>{% endif %}
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.feed_url }}</id>
  <link rel="self" type="application/atom+xml" href="{{ site.feed_url }}"/>
  <link rel="alternate" type="text/html" href="{{ site.url }}" />
  <author>
    <name>{{ site.author_name }}</name>
    {% if site.author_email %}<email>{{ site.author_email }}</email>{% endif %}
    <uri>{% if site.author_url %}{{ site.author_url }}{% else %}{{ site.url }}{% endif %}</uri>
  </author>
{% for post in site.posts %}
  <entry>
    <id>{{ site.url }}{{ post.id }}</id>
    <link rel="alternate" type="text/html" href="{{ site.url }}{{ post.url }}"/>
    <title>{{ post.title }}</title>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <author>
      <name>{{ site.author_name }}</name>
      {% if site.author_email %}<email>{{ site.author_email }}</email>{% endif %}
      <uri>{% if site.author_url %}{{ site.author_url }}{% else %}{{ site.url }}{% endif %}</uri>
    </author>
    {% for tag in post.tags %}<category scheme="{{ site.url }}" term="{{ tag }}" />
    {% endfor %}
    {% if post.description %}<summary type="html">{{ post.description | xml_escape }}</summary>{% endif %}
    <content type="html">
{{ post.content | xml_escape }}
    </content>
  </entry>
{% endfor %}
</feed>
